datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Playlist {
  id        Int      @id @default(autoincrement())
  name      String
  songs     Song[]
  createdAt DateTime @default(now())
}

model Song {
  id          Int      @id @default(autoincrement())
  title       String
  artist      String
  album       String
  duration    Int
  path        String
  progressSec Int      @default(0)
  playlistId  Int
  playlist    Playlist @relation(fields: [playlistId], references: [id])
  createdAt   DateTime @default(now())
}
